<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="datos.Turno" table="turno">
		<id name="idTurno" column="id">
			<generator class="identity" />
		</id>
		<property name="fecha" column="fecha" type="date" />
		<property name="hora" column="hora" type="time" />
		<property name="estado" column="estado">
			<type name="org.hibernate.type.EnumType">
				<param name="enumClass">datos.EstadoTurno</param>
				<param name="useName">true</param>
			</type>
		</property>
		<many-to-one name="cliente" class="datos.Cliente" column="cliente_id"
			not-null="true" />
		<many-to-one name="disponibilidad" class="datos.Disponibilidad"
			column="disponibilidad_id" not-null="true" insert="false"
			update="false" />
		<many-to-one name="servicio" class="datos.Servicio" column="servicio_id"
			not-null="true" />
	</class>
</hibernate-mapping>
