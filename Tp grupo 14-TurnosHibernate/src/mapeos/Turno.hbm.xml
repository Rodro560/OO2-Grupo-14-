<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="datos">
    <class name="Turno" table="turno">
        <id name="idTurno" column="idTurno">
            <generator class="identity"/>
        </id>

        <property name="fecha" column="fecha" type="java.time.LocalDate"/>
        <property name="hora" column="hora" type="java.time.LocalTime"/>
        
        <property name="estado" column="estado">
            <type name="org.hibernate.type.EnumType">
                <param name="enumClass">datos.EstadoTurno</param>
                <param name="useOrdinal">false</param>
            </type>
        </property>

        <many-to-one name="cliente" column="cliente_id" class="datos.Cliente"/>
		<many-to-one name="disponibilidad" column="disponibilidad_id" class="datos.Disponibilidad"/>
		<many-to-one name="servicio" column="servicio_id" class="datos.Servicio"/>

    </class>
</hibernate-mapping>
