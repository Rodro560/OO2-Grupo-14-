<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="datos">
    <class name="Especificacion" table="especificacion">
        <id name="idEspecificacion" column="idEspecificacion">
            <generator class="identity"/>
        </id>

        <property name="rubro" column="rubro" type="string"/>
        <property name="detalles" column="detalles" type="string"/>
        <property name="personalInvolucrado" column="personalInvolucrado" type="string"/>
        
        <one-to-one name="servicio" class="datos.Servicio" constrained="true" />
    </class>
</hibernate-mapping>
