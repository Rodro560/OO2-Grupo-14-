<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="datos.Disponibilidad" table="disponibilidad">
		<id name="idDisponibilidad" column="idDisponibilidad">
			<generator class="identity" />
		</id>

		<property name="diaSemana" column="diaSemana">
			<type name="org.hibernate.type.EnumType">
				<param name="enumClass">datos.EnumDias</param>
				<param name="useOrdinal">false</param>
			</type>
		</property>

		<property name="horaInicio" column="horaInicio"
			type="java.time.LocalTime" />
		<property name="horaFin" column="horaFin" type="java.time.LocalTime" />

		<many-to-one name="servicio" class="datos.Servicio" column="servicio_id"
			not-null="true" />

		<set name="lstTurnos" cascade="all-delete-orphan" inverse="true"
			lazy="false">
			<key column="disponibilidad_id" />
			<one-to-many class="datos.Turno" />
		</set>
	</class>
</hibernate-mapping>
